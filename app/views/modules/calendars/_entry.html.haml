.single-event{ itemscope: true, itemprop: 'event', itemtype: 'http://schema.org/Event' }
  .indicator-wrapper
    = render partial: 'modules/categories/indicator', locals: { category: entry.category }
  = link_to event_single_event_path(*entry.path_info), class: "short-description", itemprop: 'url' do
    %h3{ itemprop: 'name' }= entry.title
    %h4= entry.subtitle
    %p.additional-info= raw entry.additional_info
