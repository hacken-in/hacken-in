- if controller_name != 'sessions'
  &nbsp;
  = link_to "Einloggen", new_session_path(resource_name), class: 'not_a_btn'

- if devise_mapping.registerable? && controller_name != 'registrations'
  &nbsp;
  = link_to "Registrieren", new_registration_path(resource_name), class: 'not_a_btn'

- if devise_mapping.recoverable? && controller_name != 'passwords'
  &nbsp;
  = link_to "Passwort vergessen?", new_password_path(resource_name), class: 'not_a_btn'

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  &nbsp;
  = link_to "E-Mail f√ºr die Aktivierung nicht erhalten?", new_confirmation_path(resource_name), class: 'button'

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  &nbsp;
  = link_to "E-Mail zum entsperren des Kontos nicht bekommen?", new_unlock_path(resource_name), class: 'button'
