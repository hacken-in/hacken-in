- title @event.name

%div.right_row
  = render "map", event: @event
  %div.map

  #twitter_like
    <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="hackcologne">Tweet</a>
    <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>

  #fb_like
    #fb-root
      <script src="http://connect.facebook.net/en_US/all.js#appId=213379535367603&amp;xfbml=1"></script>
      <fb:like href="#{event_url(@event)}" send="true" width="450" show_faces="false" font="" layout="button_count"></fb:like>

= render "tags/tags", tag_list: @event.tag_list

- if @event.description?
  = convert_markdown @event.description

= render "address",address: @event

= render "links", item: @event

- if can? :update, @event
  = link_to t('events..show.edit'), edit_event_path(@event)

- if can? :delete, @event
  = link_to t('events.show.delete'), event_path(@event), method: :delete, confirm: t('events.show.delete_confirm')

%p= link_to t('events.show.subscribe_ical'), url_for(action: "abonnieren", controller: "welcome", format: "ical", only_path: false, event_id: @event.id)

%h2= t('events.show.next_single_events')

- if @event.single_events.today_or_in_future.length > 0
  %ul
    - @event.single_events.today_or_in_future.each do |single_event|
      %li
        = link_to @event.full_day? ? single_event.occurrence.strftime("%d.%m.%Y") : single_event.occurrence.strftime("%d.%m.%Y um %H:%M"), controller: "single_events", action: "show", event_id: @event.id, id: single_event.id
        - if single_event.topic?
          \-
          = single_event.topic
        - if can? :delete, single_event
          = link_to t('events.show.delete'), event_single_event_path(single_event.event, single_event), method: :delete, confirm: t('events.show.delete_confirm')

- else
  %p= t('events.show.no_single_events')

- if can? :update, @event
  = render "edit", event: @event

%p
  %a{href: "/"}= t('events.show.back')

= render partial: "comments/comments", locals: {commentable: @event}

