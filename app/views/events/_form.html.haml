= content_for :javascript do
  :javascript
    $(function() {
      $("#event_tag_list").tokenInput("#{tags_path}", {theme: "facebook", allowNewItems: true,
        hintText: "Gebe einen Tag ein", noResultsText:"Kein Tag gefunden", searchingText:"Suche...",
        tokenValue: "name", prePopulate: #{ tag_list_for_taggable(event) }});
      $("#event_name").focus();
    });

= semantic_form_for event do |form|
  = form.inputs do
    = form.input :name
    = form.input :description, :input_html => { :class => 'autogrow', :rows => 10}
    %li
      %label
      = render "commons/markdown_info"
    = form.input :location
    = form.input :street
    = form.input :zipcode
    = form.input :city
    = form.input :url
    = form.input :twitter
    = form.input :twitter_hashtag
    = form.input :start_time, as: :datetime
    = form.input :full_day
    = form.input :duration
    = form.input :tag_list
  = form.actions
