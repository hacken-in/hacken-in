= form_for comment, url: comment.new_record? ? comments_path(comment) : comment_path(comment) do |form|
  = gravatar_image_tag((comment.user.nil? ? current_user.email : comment.user.email),:gravatar => { :default => :identicon, :size => 32 })
  .content
    = form.text_area :body
    %p.help
      %em= raw t 'comments._form.markdown_info', :syntax_link => "http://daringfireball.net/projects/markdown/syntax"
    = form.submit t('comments._form.comment_button')
